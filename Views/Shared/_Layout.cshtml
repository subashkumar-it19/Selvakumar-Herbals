<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Selvakumar Herbals</title>
    <meta name="keywords" content="gloriosa seeds, gloriosa, gloriosasuperba,seeds,superba,flame,flame lily">
    <meta name="description" content="We supply gloriosa seeds">
    <meta name="author" content="Subashkumar N">
    <link rel="icon" type="image/x-icon" href="~/images/icon.png">
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/navbar.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/skh.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="navbar-container container">
                <input type="checkbox" name="" id="">
                <div class="hamburger-lines">
                    <span class="line line1"></span>
                    <span class="line line2"></span>
                    <span class="line line3"></span>
                </div>


                <ul class="menu-items">
                    <li class="">
                        <a class="" asp-area="" asp-action="Index">Home</a>
                    </li>
                    <li class="">
                        <a class="" asp-area="" asp-action="About">About Us</a>
                    </li>
                    <li class="">
                        <a class="" asp-area="" asp-action="Contact">Contact Us</a>
                    </li>

                </ul>

                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo.png" style="width: 100px; height:52px; margin-top:2px" alt="company logo" class="logo">
                </a>

            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Selvakumar Herbals
            <div class="email" style="align-content:end;">
                <h4>Email:      <a href="mailto:pnmselva@gmail.com" class="email">pnmselva@gmail.com</a> </h4>
               
            </div>
        </div>
    </footer>


   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @*<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>*@
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

